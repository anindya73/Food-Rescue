<% var bodyHtml = `
<h4 class="text-success mb-3">Assign Donation to Volunteer</h4>
<form method="POST">
  <div class="row g-3">
    <div class="col-md-6">
      <label class="form-label">Donation</label>
      <select class="form-select" name="donation_id">
        `; donations.forEach(d => { bodyHtml += `
        <option value="${d.id}">
          #${d.id} - ${d.food_item} (${d.quantity} kg, ${d.center_name})
        </option>
        `; }); bodyHtml += `
      </select>
    </div>
    <div class="col-md-6">
      <label class="form-label">Volunteer</label>
      <select class="form-select" name="volunteer_id">
        `; volunteers.forEach(v => { bodyHtml += `
        <option value="${v.id}">${v.name}</option>
        `; }); bodyHtml += `
      </select>
    </div>
  </div>
  <div class="mt-3 text-end">
    <button class="btn btn-success">Assign Pickup</button>
  </div>
</form>
`; %> <%- include('../layout', { title: 'Assign Pickup', body: bodyHtml }) %>
